<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gisbert.it.pedidos.actividad.EquipoDetalleActivity"
    android:background="@color/Fondo"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/equipo_marca_label"
        android:id="@+id/textView_equipo_marca_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/Etiquetas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_equipo_marca"
        android:layout_toEndOf="@+id/textView_equipo_modelo_label"
        android:layout_above="@+id/textView_equipo_modelo_label"
        android:layout_toRightOf="@+id/textView_equipo_modelo_label"
        android:layout_marginLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/TextoUsuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/equipo_modelo_label"
        android:id="@+id/textView_equipo_modelo_label"
        android:layout_below="@+id/textView_equipo_marca_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/Etiquetas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_equipo_modelo"
        android:layout_toEndOf="@+id/textView_equipo_modelo_label"
        android:layout_alignTop="@+id/textView_equipo_modelo_label"
        android:layout_alignRight="@+id/textView_equipo_marca"
        android:layout_alignEnd="@+id/textView_equipo_marca"
        android:textColor="@color/TextoUsuario"
        android:layout_alignLeft="@+id/textView_equipo_marca"
        android:layout_alignStart="@+id/textView_equipo_marca" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/equipo_imei_label"
        android:id="@+id/textView_equipo_imei_label"
        android:layout_below="@+id/textView_equipo_modelo_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/Etiquetas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_equipo_imei"
        android:layout_alignBottom="@+id/textView_equipo_imei_label"
        android:layout_alignLeft="@+id/textView_equipo_modelo"
        android:layout_alignStart="@+id/textView_equipo_modelo"
        android:layout_alignRight="@+id/textView_equipo_modelo"
        android:layout_alignEnd="@+id/textView_equipo_modelo"
        android:textColor="@color/TextoUsuario" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagen_equipo"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>