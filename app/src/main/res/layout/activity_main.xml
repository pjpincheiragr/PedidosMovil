

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:background="#ffffff">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/user"
    android:id="@+id/textView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textColor="@color/Etiquetas" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/pass"
    android:id="@+id/textView2"
    android:layout_below="@+id/editText_user"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textColor="@color/Etiquetas" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/editText_user"
    android:layout_below="@+id/textView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:maxLines="1"
    android:maxLength="50"
    android:textColor="@color/TextoUsuario"
    android:inputType="text" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/editText_pass"
    android:layout_below="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/editText_user"
    android:layout_alignEnd="@+id/editText_user"
    android:maxLines="1"
    android:maxLength="50"
    android:textColor="@color/TextoUsuario" />

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/save_pass"
    android:id="@+id/checkBox_save"
    android:checked="false"

    android:textColor="@color/Etiquetas"
    android:background="@color/Fondo"
    android:layout_below="@+id/editText_pass"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp" />


<Button
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="@string/connect"
    android:id="@+id/button_connect"
    android:background="@color/FondoBoton"
    android:layout_below="@+id/checkBox_save"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    style="@style/AppTheme"
    android:enabled="true"
    android:textColor="@color/TextoBoton" />
</RelativeLayout>