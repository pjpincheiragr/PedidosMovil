<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">


        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/ibtnPedidos"
            android:layout_weight="1"
            android:scaleType="center"
            android:onClick="onClickButton_Pedidos"
            android:background="@color/FondoBoton"
            android:textColor="@color/TextoBoton"
            android:layout_marginTop="20dp"
            android:text="@string/pedidos_activos"
            android:layout_marginBottom="20dp"
             />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnPedidosFinalizados"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="onClickButton_PedidosItem"
            android:padding="@dimen/abc_action_bar_default_padding_end_material"
            android:layout_marginTop="20dp"
            android:text="@string/pedidos_finalizados"
            android:layout_marginBottom="20dp"
            android:nestedScrollingEnabled="false"
            android:background="@color/FondoBoton"
            android:textColor="@color/TextoBoton"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageButton8"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="onClickButton_Otro"
            android:padding="@dimen/abc_action_bar_default_padding_start_material"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/Contenido"
            android:nestedScrollingEnabled="true"
            android:background="@color/FondoBoton"
            android:textColor="@color/TextoBoton"/>


    </LinearLayout>
</LinearLayout>