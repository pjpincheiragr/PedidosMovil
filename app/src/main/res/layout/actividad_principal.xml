<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:backgroundTint="#83ffffff"
    android:backgroundTintMode="src_in"
    android:background="#ff982b">

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/boton1"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/pedidos_activos"
        android:onClick="onClickButton_Pedidos"
        android:contentDescription="@string/pedidos_activos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/pedidos_activos"
        android:id="@+id/textView3"
        android:layout_row="1"
        android:layout_column="0"
        android:textAlignment="center"
        android:textColor="#ffb834"
        android:textSize="12sp"
        android:layout_below="@+id/boton1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/boton2"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/pedidos_completos"
        android:onClick="onClickButton_Pedidos"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/pedidos_finalizados"
        android:id="@+id/textView4"
        android:layout_row="1"
        android:layout_column="1"
        android:textAlignment="center"
        android:textColor="#ffb834"
        android:textSize="12dp"
        android:layout_below="@+id/boton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/boton3"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/rutas"
        android:onClick="onClickButton_RUTAS"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/boton2"
        android:layout_alignStart="@+id/boton2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/rutas"
        android:id="@+id/textView5"
        android:layout_row="3"
        android:layout_column="0"
        android:textAlignment="center"
        android:textColor="#ffb834"
        android:textSize="12dp"
        android:layout_below="@+id/boton3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>